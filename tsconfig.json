{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"checkJs": true,
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"incremental": true,
		"lib": [
			"ES2015",
			"ES2016",
			"ES2017",
			"ES2018",
			"ES2019",
			"ES2020",
			"ES2021",
			"esnext"
		],
		"module": "CommonJS",
		"moduleResolution": "node",
		"noEmit": false,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": false,
		"noUnusedLocals": true,
		"outDir": "build",
		"resolveJsonModule": true,
		"sourceMap": true,
		"strict": true,
		"strictBindCallApply": true,
		"strictNullChecks": true,
		"target": "es6",
		"skipLibCheck": true
	},
	"exclude": [
		".vscode",
		"node_modules/**/*"
	],
	"include": [
		"src/**/*",
		"index.d.ts"
	]
}
